<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/product_border_shape_card"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/idCategoryListBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idTextProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Title"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/headingTitleColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_10dp">
                <TextView
                    android:textColor="@color/headingTitleColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lahore"></TextView>
                <TextView
                    android:textColor="@color/headingTitleColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="8 Aug 2021"></TextView>
                <TextView
                    android:textColor="@color/headingTitleColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_regular"
                    android:id="@+id/idProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Rs"></TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:tint="@color/logo_color_sp"
            android:layout_margin="@dimen/padding_10dp"
            android:id="@+id/idAddToFavouriteProductDetail"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/favourite"
            android:layout_alignParentRight="true"></ImageView>
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_below="@+id/idCategoryListBottom"
            android:id="@+id/idRewardCardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_below="@id/idCategoryListBottom"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/slider_layout01">
                <com.smarteist.autoimageslider.SliderView
                    android:layout_margin="2dp"
                    android:id="@+id/imageSlider01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:sliderAnimationDuration="500"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="500"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginLeft="17dp"
            android:id="@+id/idRecipeCategoryRowPrice"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idRewardCardView"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/open_sans_regular"
            android:background="@drawable/price_arrow_layout"
            android:layout_marginTop="115dp"
            android:text="Close Now "
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <RelativeLayout
            android:id="@+id/priceTag_arrow"
            android:rotation="1"
            android:layout_marginTop="106dp"
            android:layout_toRightOf="@+id/idRecipeCategoryRowPrice"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_arrow_layout"></RelativeLayout>
        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/idRewardCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp">
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/idProductAddToCartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/round_corner_pakjinnah_red"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/idLoginLogo"
                    android:layout_width="35dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cart"
                    card_view:tint="@color/white" />
                <TextView
                    android:id="@+id/idOutOfStockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>