<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/idEmailMessageCard"
                android:background="@color/black"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                app:contentPadding="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/idNameMessageLinearLayout"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Send Us Message"
                            android:layout_margin="10dp"></TextView>
                        <EditText
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/idTextNameEmailMessage"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"></EditText>
                        <EditText
                            android:inputType="number"
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/idTextPhoneEmailMessage"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"></EditText>
                        <EditText
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/idTextMessageEmail"
                            android:gravity="start"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Message"
                            android:lines="4"></EditText>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/services_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/department_register"
                                android:layout_toRightOf="@id/department_register"></Spinner>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/idEmailMessageCard"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/rel_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_002">
                <!-- android:background="@drawable/background_002"
                 android:background="@drawable/background_line_02"-->
                <Button
                    android:padding="@dimen/margin_10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:id="@+id/idSendEmail"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:shadowColor="@color/headingTitleColor"
                    android:textColor="@color/headingTitleColor"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_line_02"
                    android:layout_margin="3dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>