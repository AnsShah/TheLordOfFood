<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:background="@drawable/table_border_shape_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/headingTitleColor"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Including 16% GST of Total"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"
                            android:textColor="@color/headingTitleColor"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GST:"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/table_border_shape_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10dp"
                            android:id="@+id/idInvoiceProductsTotalPriceGst"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:textColor="@color/headingTitleColor"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>