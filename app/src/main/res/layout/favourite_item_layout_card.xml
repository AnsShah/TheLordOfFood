<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/idOrderRowOrderSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/headingColor"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/open_sans_bold"
            tools:text="Category" />
        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/idOrderRowImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/idOrderRowOrderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="@color/headingTitleColor"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="Product Name" />
                <TextView

                    android:id="@+id/idOrderRowOrderCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="@color/headingTitleColor"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="Product type" />
                <LinearLayout
                    android:id="@+id/idOrderRowDetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- android:gravity="bottom"-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rs."
                            android:textColor="@color/headingTitleColor"
                            android:textSize="15sp" />

                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/idOrderRowNewPricee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rs "
                            android:maxLines="1"
                            android:textColor="@color/lord_of_food_color"
                            tools:text="0.00" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/removeOrder"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/delete" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:id="@+id/idAddToCartLayout"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/round_corner_pakjinnah_red"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/idLoginLogo"
                    android:layout_width="35dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cart"
                    android:tint="@color/white"/>
                <TextView
                    android:id="@+id/idOutOfStockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>