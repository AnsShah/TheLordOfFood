<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="title"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:textColor="@color/headingTitleColor"
            android:layout_margin="10dp"
            android:id="@+id/title_item"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/idProductImageCardView"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/title_item"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="170dp"
            app:cardElevation="5dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/related_image"
                    android:layout_width="170dp"
                    android:scaleType="fitXY"
                    android:layout_height="80dp"
                    android:src="@drawable/logo" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/idRelativeLayoutAddTocart"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:id="@+id/idAddToCartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/round_corner_pakjinnah_red"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/idLoginLogo"
                    android:layout_width="35dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cart"
                    card_view:tint="@color/white" />
                <TextView
                    android:id="@+id/idOutOfStockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>