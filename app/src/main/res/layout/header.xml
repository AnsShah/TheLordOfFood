<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/idTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/idToggleBtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/toggle_btn"
            android:tint="@color/backImageColor"/>
        <ImageView
            android:id="@+id/idBookingMainActivityHeaderTitle"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:tint="@color/backImageColor"
            android:textSize="20sp"
            android:src="@drawable/logo1"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/basketLayout"
        android:layout_width="40dp"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/idSearchDataFishItHome">
        <ImageView
            android:id="@+id/idHeaderCartBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cart"
            app:tint="@color/lord_of_food_color" />
        <TextView
            android:id="@+id/idMainPageCartHint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_circle_for_cart"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/headingTitleColor"
            android:textSize="10sp" />
    </RelativeLayout>
    <ImageView
        android:tint="@color/backImageColor"
        android:id="@+id/idSearchDataFishItHome"
        android:layout_width="@dimen/padding_30dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_search"
        android:layout_alignParentRight="true"
      android:layout_marginRight="5dp"
        android:layout_centerVertical="true"></ImageView>
</RelativeLayout>