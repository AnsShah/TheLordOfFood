<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_margin="5dp"
            android:background="@drawable/product_border_shape_card_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="2dp"
                android:id="@+id/idRelativeShopName"
                android:background="@color/light_grey_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/open_sans_regular"
                        android:id="@+id/idTextShopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lord Of Food"
                        android:textStyle="bold"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Detail"
                        android:textStyle="bold"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:id="@+id/idTextOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="2dp"
                android:background="@drawable/table_border_shape_layout"
                android:id="@+id/idRelativeUserDetails"
                android:layout_below="@+id/idRelativeShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:textColor="@color/headingTitleColor"
                            android:textSize="10dp"
                            android:id="@+id/idTextOrderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Date: 2021-03-06"></TextView>
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:textColor="@color/headingTitleColor"
                            android:textSize="10dp"
                            android:id="@+id/idTextPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Method: Cash On Delivery"></TextView>
                        <!--Payment Method: Cash On Delivery-->
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:textColor="@color/headingTitleColor"
                            android:textSize="10dp"
                            android:id="@+id/idTextAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address:"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/table_border_shape_layout"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="@color/headingTitleColor"
                                android:textSize="10dp"
                                android:id="@+id/idTextUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name:"></TextView>
                            <TextView
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="@color/headingTitleColor"
                                android:textSize="10dp"
                                android:id="@+id/idTextUserEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email:"></TextView>
                            <TextView
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="@color/headingTitleColor"
                                android:textSize="10dp"
                                android:id="@+id/idTextUserPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone:"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>