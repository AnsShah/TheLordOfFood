<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Cart.ConfirmOrderActivity">

    <ImageView
        android:id="@+id/idOrderHeaderBackBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="13dp"
        android:src="@drawable/back"
        android:tint="@color/backImageColor"/>
    <LinearLayout
        android:id="@+id/idMarketPlaceHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_regular"
            android:text="Confirm Order"
            android:gravity="center"
            android:textColor="@color/headingTitleColor"
            android:textSize="27sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/idMarketPlaceHeader"
        android:id="@+id/line2"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:background="@color/black"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            app:contentPadding="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/idLinearConfirmLayout"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:fontFamily="@font/open_sans_regular"
                        android:inputType="text"
                        android:layout_margin="10dp"
                        android:id="@+id/idConfirmOrderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Name"></EditText>
                    <EditText
                        android:fontFamily="@font/open_sans_regular"
                        android:inputType="textEmailAddress"
                        android:layout_margin="10dp"
                        android:id="@+id/idConfirmOrderEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Email"></EditText>
                    <EditText
                        android:fontFamily="@font/open_sans_regular"
                        android:inputType="phone"
                        android:layout_margin="10dp"
                        android:id="@+id/idConfirmOrderPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Phone"></EditText>
                    <EditText
                        android:gravity="start"
                        android:lines="2"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_margin="10dp"
                        android:id="@+id/idConfirmOrderAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Address"></EditText>
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:layout_margin="@dimen/padding_10dp"
                        android:id="@+id/idchecklocation"></ImageView>
                    <!--android:gravity="start"
                        android:lines="3"
                        android:fontFamily="@font/open_sans_regular"
                        android:inputType="text"
                        android:layout_margin="10dp"
                        android:id="@+id/idConfirmOrderAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Address"-->
                    <RelativeLayout

                        android:id="@+id/idRelativeLayoutAreas"
                        android:layout_margin="@dimen/padding_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Area"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>
                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idSpinnerAreas"></Spinner>
                    </RelativeLayout>
                    <fragment
                        android:layout_margin="@dimen/padding_10dp" xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:map="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <EditText
                        android:fontFamily="@font/open_sans_regular"
                        android:id="@+id/idConfirmOrderComment"
                        android:gravity="start"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Comment"
                        android:lines="4"></EditText>

                </LinearLayout>
                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/idLinearConfirmLayout"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/idConfirmOrderRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_002">
                    <!-- android:background="@drawable/background_002"
                     android:background="@drawable/background_line_02"-->
                    <Button
                        android:fontFamily="@font/open_sans_regular"
                        android:id="@+id/idConfirmOrderButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Now"
                        android:textColor="@color/headingTitleColor"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_line_02"
                        android:layout_margin="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_toLeftOf="@id/idConfirmOrderRelative"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/idLinearConfirmLayout"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/idCancelOrderRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_002">
                    <!-- android:background="@drawable/background_002"
                     android:background="@drawable/background_line_02"-->
                    <Button
                        android:fontFamily="@font/open_sans_regular"
                        android:id="@+id/idCancelOrderButton"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/headingTitleColor"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_line_02"
                        android:layout_margin="4dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>