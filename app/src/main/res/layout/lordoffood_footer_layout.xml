<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfae25">
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_copyright"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2021 .Powered by"></TextView>
            <ImageView
                android:id="@+id/img_footer"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/text_copyright"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:src="@drawable/footerimg"></ImageView>
            <TextView
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All rights are reserved"
                android:layout_centerInParent="true"
                android:layout_below="@id/img_footer"></TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>