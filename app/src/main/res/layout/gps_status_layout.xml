<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="4dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    >
<LinearLayout
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:id="@+id/rel_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/img_war"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_warning_24"
            app:tint="@color/black"></ImageView>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_war"
            android:layout_below="@+id/img_war"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning"
            android:textSize="20dp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/gps_txt"
            android:layout_below="@+id/txt_war"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Location Service is disabled.Kindly"
          ></TextView>
        <TextView
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/gps_txt1"
            android:layout_below="@+id/gps_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enable to proceed."
            ></TextView>
        <RelativeLayout
            android:layout_below="@+id/gps_txt1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/seperator_01">
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/rel_gps">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:id="@+id/txt_nope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nope"
            android:textColor="#DA0505"></TextView>
        <TextView
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_yup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yup"
            android:textColor="#028107"></TextView>
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>